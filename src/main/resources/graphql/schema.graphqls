type Query {
    getUsers : [UserEntity]
    getUser(id: ID!) : UserEntity

    getPosts: [Post]

    getComments: [Comment]
    getComment(id: ID!) : Comment
}

type UserEntity {
    id: ID!
    name: String!
}

type Post {
    id: ID!
    authorUserId: Int!
    authorUser: UserEntity!
    text: String!
}

type Comment {
    id: ID!
    postId: Int!
    post: Post!
    authorUserId: Int!
    authorUser: UserEntity!
    text: String!
}